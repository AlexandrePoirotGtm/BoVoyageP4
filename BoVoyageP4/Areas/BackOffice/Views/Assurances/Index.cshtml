@model IEnumerable<BoVoyageP4.Models.Assurance>

@{
    ViewBag.Title = "Gestion des Assurances";
}

<h2>@ViewBag.Title</h2>

<p>
    <a href="@Url.Action("Create", "Assurances")" class="btn btn-primary" role="button">Nouvelle Assurance</a>
</p>
<table class="table">
    <tr>
        <th>
            N°
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeAssurance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Montant)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeAssurance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Montant)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id=item.ID })"><i class="glyphicon glyphicon-edit text-warning"></i></a>
                <a href="@Url.Action("Details", new { id=item.ID })"><i class="glyphicon glyphicon-search"></i></a>
                <a href="@Url.Action("Delete", new { id=item.ID })"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
        </tr>
    }
</table>