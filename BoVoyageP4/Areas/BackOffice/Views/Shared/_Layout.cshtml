@{
    var admin = Session["COMMERCIAL"] as BoVoyageP4.Models.Commercial;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - INTRANET</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/jquery.datetimepicker.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar-default sidebar" role="navigation" style="background-color: #e3f2fd;">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Accueil", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Tableau de bord", "Index", "Tableaudebord", new { area = "BackOffice" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Agences", "Index", "AgenceVoyages", new { area = "BackOffice" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Voyages", "Index", "Voyages", new { area = "BackOffice" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Destinations", "Index", "Destinations", new { area = "BackOffice" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Clients", "Index", "Clients", new { area = "BackOffice" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Assurances", "Index", "Assurances", new { area = "BackOffice" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Commerciaux", "Index", "Commercials", new { area = "BackOffice" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Dossiers de reservation", "Index", "DossierReservations", new { area = "BackOffice" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Questions clients", "Index", "FormulaireContacts", new { area = "BackOffice" }, new { @class = "navbar-brand" })
                <ul class="nav navbar-nav navbar-right bg-warning">
                    <li>
                        <p class="navbar-brand">Bonjour @admin.Prenom @admin.Nom </p>
                    </li>
                    <li>
                        <a id="logout" href="@Url.Action("Logout", "authentification")"><i class="glyphicon glyphicon-log-out"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @Html.Partial("_PartialDisplay")
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BoVoyage</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>