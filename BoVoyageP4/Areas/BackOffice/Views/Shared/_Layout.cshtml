@{
    var admin = Session["COMMERCIAL"] as BoVoyageP4.Models.Commercial;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - INTRANET</title>
    @Styles.Render("~/Content/css")

</head>
<body>
    <div class="navbar-default sidebar" role="navigation" style="background-color: #e3f2fd;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Accueil", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Tableau de bord", "Index", "Tableaudebord", new { area = "BackOffice" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Agence", "Index", "AgenceVoyages", new { area = "BackOffice" }, new { @class = "navbar-brand" })
                @Html.ActionLink("voyage", "Index", "Voyages", new { area = "BackOffice" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Destination", "Index", "Destinations", new { area = "BackOffice" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Client", "Index", "Clients", new { area = "BackOffice" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Assurance", "Index", "Assurances", new { area = "BackOffice" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Commercial", "Index", "Commercials", new { area = "BackOffice" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Dossier de reservation", "Index", "DossierReservations", new { area = "BackOffice" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Message", "Index", "FormulaireContacts", new { area = "BackOffice" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
                <ul class="nav navbar-nav navbar-right" style="color:red">
                    <li>
                        <p class = "navbar-brand">Bonjour @admin.Prenom @admin.Nom </p>
                    </li>
                    <li>
                        <a id="logout" href="@Url.Action("Logout", "authentification")"><i class="glyphicon glyphicon-log-out"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @Html.Partial("_PartialDisplay")
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BoVoyage</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>