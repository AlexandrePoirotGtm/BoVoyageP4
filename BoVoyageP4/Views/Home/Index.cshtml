

<div class="row">
    @foreach (var item in Model.Voyage)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                @if (item.Pictures?.Count() > 0)
                {
                    @Html.VoyageImage(item.Pictures.First(), "img-circle")
                }
                <div class="caption">
                    <h3>@item.Destination</h3>
                    <p>@item.PrixParPersonne</p>
                    <p>@item.DateAller.ToString("ddd dd MMM yyyy ")</p>

                    <p><a href="@Url.RouteUrl("DetailsVoyage", new { id=item.ID, name = item.Name })" class="btn btn-primary" role="button">Voir les détails</a> <a href="@Url.Action("SubscribeTournament", "archers", new { tournamentId = item.ID })" class="btn btn-primary" role="button">S'inscrire</a></p>
                </div>
            </div>
        </div>
    }
</div>